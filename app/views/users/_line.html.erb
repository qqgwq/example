<% if current_user.online? %>
  <%= link_to User.human_attribute_name("status.#{current_user.status}"), online_user_path(current_user), method: :put, remote: true, style: 'background-color:red' %>
<% else %>
  <%= link_to User.human_attribute_name("status.#{current_user.status}"), left_user_path(current_user), method: :put, remote: true, style: 'background-color:grey' %>
<% end %>